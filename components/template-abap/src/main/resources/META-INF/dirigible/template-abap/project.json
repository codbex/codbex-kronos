{
  "guid": "{{projectName}}",
  "actions": [
    {
      "name": "Transpile ABAP",
      "commands": [
        {
          "os": "mac",
          "command": "sh build-mac.sh"
        },
        {
          "os": "linux",
          "command": "sh build-linux.sh"
        }
      ],
      "publish": "true"
    },
    {
      "name": "Build TypeScript",
      "commands": [
        {
          "os": "unix",
          "command": "tsc"
        },
        {
          "os": "windows",
          "command": "cmd /c tsc"
        }
      ],
      "registry": "true"
    }
  ]
}
